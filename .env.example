# ==========================================
# PostgreSQL Backup to S3 - Configuration
# ==========================================
# 1. Copy this file: cp .env.example .env
# 2. Edit .env with your values
# 3. Run: docker-compose up -d
# ==========================================

# Timezone
TZ=UTC

# PostgreSQL Connection
# - Docker container: use container name (e.g., postgres)
# - External host: use IP or domain (e.g., db.example.com)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DATABASES=db1,db2,db3

# S3 / Digital Ocean Spaces
S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
S3_BUCKET=my-bucket
S3_ACCESS_KEY=your_access_key
S3_SECRET_KEY=your_secret_key
S3_PREFIX=backups

# Backup Schedule (cron format, default: every 2 hours)
BACKUP_SCHEDULE=0 */2 * * *

# Retention (days, 0=unlimited)
BACKUP_RETENTION_DAYS=30

# Run backup on container start
BACKUP_ON_START=true

USE_DOCKER_NETWORK=true
NETWORK_NAME=myapp_default
